<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XPNSS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/alt_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@color/alt_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar</item> <!-- Applies the below ActionBar style -->
    </style>

    <!-- ActionBar styles -->
    <!-- This is to make the action bar keep main color without affecting the BottomNavigationView -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/main_green</item>
    </style>
</resources>